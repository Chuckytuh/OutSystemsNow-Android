<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/list_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/background_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/background_images_aplications" >

        <com.outsystems.anroid.widgets.roundedimage.RoundedImageView
            android:id="@+id/image_view_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:border_color="@android:color/transparent"
            app:border_width="0dp"
            app:corner_radius="5dp"
            app:oval="false" />
    </RelativeLayout>

    <com.outsystems.android.widgets.CustomFontTextView
        android:id="@+id/text_view_application"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/grid_text_color"
        custom:fontStyle="Light" />

</LinearLayout>