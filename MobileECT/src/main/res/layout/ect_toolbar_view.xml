<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/outSystems_red"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonClose"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            android:background="@drawable/icon_cross_white"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.70"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ectFeedbackMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:autoText="false"
            android:background="@drawable/edit_text_roundedcorners"
            android:editable="true"
            android:ems="15"
            android:enabled="true"
            android:hint="@string/feedback_message_prompt"
            android:inputType="textMultiLine"
            android:maxLength="500"
            android:maxLines="5"
            android:minHeight="36dp"
            android:minLines="1"
            android:padding="3dp"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonPlayAudio"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/icon_play_white"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" />


        <Button
            android:id="@+id/buttonStopAudio"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/icon_stop_white"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.15"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonSend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/send_button"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/buttonRecordAudio"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="6dp"
            android:background="@drawable/icon_microphone_white"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>
</LinearLayout>